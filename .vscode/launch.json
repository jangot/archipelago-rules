  "version": "0.2.0",
  "configurations": [
    {      
      "type": "node",
      "request": "launch",
      "name": "Launch Core API",
      "cwd": "${workspaceFolder}/zng",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nest",
        "start",
        "--debug",
        "--watch",
        "core"
      ],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
      {      
      "type": "node",
      "request": "launch",
      "name": "Launch Notification API",
      "cwd": "${workspaceFolder}/zng",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "nest",
        "start",
        "--debug",
        "--watch",
        "notification"
      ],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    }
  ]
}