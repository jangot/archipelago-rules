  "version": "0.2.0",
  "configurations": [

    {      
      "type": "node",
      "request": "launch",
      "name": "Launch Core API",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "--prefix",
        "./zng",
        "run",
        "start:debug",
        "--",
        "--inspect-brk",
        "core"
      ],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    }
  ]
}