{
  "name": "archipelago-rules",
  "version": "1.0.0",
  "description": "Правила игры Архипелаг с автоматической синхронизацией",
  "main": "scripts/sync-rules.js",
  "scripts": {
    "sync": "node scripts/sync-rules.js",
    "sync:google": "node scripts/google-docs-sync.js",
    "sync:public": "node scripts/public-docs-sync.js",
    "test:sync": "node scripts/test-sync.js",
    "sync:html": "node scripts/sync-rules.js \"$(pbpaste)\"",
    "sync:file": "node scripts/sync-rules.js \"$(cat temp-doc.html)\"",
    "sync:backup": "cp -r files/parts files/parts-backup-$(date +%Y%m%d-%H%M%S)",
    "sync:restore": "cp -r files/parts-backup-$(ls -t files/parts-backup-* | head -1 | cut -d'-' -f3- | cut -d'/' -f1) files/parts",
    "sync:clean": "rm -rf files/parts-backup-*",
    "sync:status": "echo \"Последние изменения:\" && git log --oneline -10 -- files/parts/",
    "sync:diff": "git diff files/parts/",
    "sync:all": "npm run sync:backup && npm run sync:public && npm run sync:status",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "jsdom": "^22.1.0",
    "googleapis": "^128.0.0"
  },
  "keywords": ["rpg", "rules", "archipelago", "markdown"],
  "author": "",
  "license": "MIT"
}
