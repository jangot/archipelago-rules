{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/core-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/core-api/tsconfig.app.json"
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "payment-api": {
      "type": "application",
      "root": "apps/payment-api",
      "entryFile": "main",
      "sourceRoot": "apps/payment-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-api/tsconfig.app.json"
      }
    },
    "notification-api": {
      "type": "application",
      "root": "apps/notification-api",
      "entryFile": "main",
      "sourceRoot": "apps/notification-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-api/tsconfig.app.json"
      }
    },
    "core-api": {
      "type": "application",
      "root": "apps/core-api",
      "entryFile": "main",
      "sourceRoot": "apps/core-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/core-api/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/core-api"
}